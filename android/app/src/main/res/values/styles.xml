<resources>
    <!-- Theme for the launch screen -->
    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your splash screen theme here -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Ensure compatibility with VdoCipher -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Normal app theme -->
    <style name="NormalTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your app's theme here -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- Match your app's dark theme -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>